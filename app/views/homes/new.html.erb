<head>
  <meta charset="utf-8" />
  <title>Conduit</title>
  <!-- Import Ionicon icons & Google Fonts our Bootstrap theme relies on -->
  <link
    href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css"
    rel="stylesheet"
    type="text/css"
  />
  <link
    href="//fonts.googleapis.com/css?family=Titillium+Web:700|Source+Serif+Pro:400,700|Merriweather+Sans:400,700|Source+Sans+Pro:400,300,600,700,300italic,400italic,600italic,700italic"
    rel="stylesheet"
    type="text/css"
  />
  <!-- Import the custom Bootstrap 4 theme from our hosted CDN -->
  <link rel="stylesheet" href="//demo.productionready.io/main.css" />
</head>

<main>
<div class="editor-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-xs-12">
        <ul class="error-messages">
          <li>That title is required</li>
        </ul>

        <%= form_with model:@article, :url => {:action => :create},method: :post do |form| %>
          <fieldset>
            <fieldset class="form-group">
              <%= form.text_field :title, placeholder: "Article Title", class: "form-control form-control-lg" %>
            </fieldset>
            <fieldset class="form-group">
              <%= form.text_field :description, placeholder: "What's this article about?", class:"form-control" %>
            </fieldset>
            <fieldset class="form-group">
              <%= form.text_area :body, placeholder: "Write your article (in markdown)", class: "form-control", rows: "8" %>
            </fieldset>
            <fieldset class="form-group">
              <%= form.text_field :taglist, placeholder: "Enter tags", class: "form-control" %>
              <div class="tag-list">
                <span class="tag-default tag-pill"> <i class="ion-close-round"></i> tag </span>
              </div>
            </fieldset>
            <%= form.submit class: "btn btn-lg pull-xs-right btn-primary" %>
            </button>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
</main>

<footer>
  <div class="container">
    <a href="/" class="logo-font">conduit</a>
    <span class="attribution">
      An interactive learning project from <a href="https://thinkster.io">Thinkster</a>. Code &amp;
      design licensed under MIT.
    </span>
  </div>
</footer>